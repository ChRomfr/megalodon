<!-- Formulaire ajout suivi depuis fiche -->
<form method="post" action="{$Helper->getLink("contacts/suiviadd/{$contact_id}")}" id="form-suivi-add" class="form-horizontal">
	<div class="form-group">
		<label for="suivi" class="control-label col-sm-2">Suivi :</label>
		<div class="col-sm-5">
			<textarea name="suivi[suivi]" id="suivi" class="form-control" required></textarea>
		</div>
	</div>
	<div class="text-center">
		<hr/>
		<input type="hidden" name="contact_id" value="{$contact_id}" />
		<button type="submit" class="btn btn-primary">Enregistrer</button>
	</div>
</form>