function get_target_filter(filter){
	filter_cible = filter;

	$('#table-targets tbody').remove();
	$.get(
	    '{$Helper->getLink("campaign/ajax_get_targets/{$campaign.id}")}',
	    {
	    	nohtml:'nohtml', filter:filter,
	    },{literal}        
	    function(data){
	    	var tpl = '<tr><td>{{nom}} {{prenom}}</td><td>{{& statut}}</td><td><a href="javascript:get_detail_contact({{cc_id}});"><i class="fa fa-edit"></i></a></tr>';
